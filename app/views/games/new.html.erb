<h1>New game</h1>

<% form_for(@game) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <% 3.times do |i| %>
    <% fields_for "game[player_attributes][]", Player.new do |session_form| %>
    <p>
      New player:
      <%= session_form.text_field :name %>
    </p>
    <% end %>
  <% end %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', games_path %>